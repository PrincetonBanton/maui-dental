<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalApp.Pages.Dashboard"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout"
                     IconImageSource="logout_icon.png"  
            Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <VerticalStackLayout Spacing="10" HorizontalOptions="CenterAndExpand" Grid.Row="0">
            <Image Source="logo1.png" WidthRequest="200" HeightRequest="200" HorizontalOptions="Center" Margin="0,60,0,0" />
            <Label Text="Your Clinic Here" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" />
        </VerticalStackLayout>
        <!-- Spacer (takes up remaining space) -->
        <BoxView Grid.Row="1" BackgroundColor="Transparent"/>
        <Label Grid.Row="2" Text="All rights reserved Mazion Co., Inc." FontSize="12" TextColor="Gray"
               HorizontalOptions="Center" VerticalOptions="End" Margin="0,10,0,10" />
    </Grid>
</ContentPage>
