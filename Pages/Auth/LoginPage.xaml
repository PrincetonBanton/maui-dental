<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalApp.Pages.Auth.LoginPage"
             BackgroundColor="White"
             Title="Login">

    <VerticalStackLayout Padding="20">
        <Frame Padding="10" CornerRadius="3" BorderColor="LightGray" Margin="0,50,0,0">
            <VerticalStackLayout Spacing="5">
                <Label Text="Login to Your Account" FontSize="24" HorizontalOptions="Center" />
                <Entry x:Name="UsernameEntry" Placeholder="Username" Keyboard="Default" ReturnType="Next" />
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" ReturnType="Done" />
                <Button Text="Login" Clicked="OnLoginClicked" TextColor="White" />
                <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" FontSize="12" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
