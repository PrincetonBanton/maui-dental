<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DentalApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:DentalApp.Pages"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Expense">
        <Tab Title="Expense">
            <ShellContent ContentTemplate="{DataTemplate pages:ExpensePage}" Route="Expense" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Account">
        <Tab Title="Account">
            <ShellContent ContentTemplate="{DataTemplate pages:AccountPage}" Route="AccountPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Patient">
        <Tab Title="Patient">
            <ShellContent ContentTemplate="{DataTemplate pages:PatientPage}" Route="PatientPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Product">
        <Tab Title="Product">
            <ShellContent ContentTemplate="{DataTemplate pages:ProductPage}" Route="ProductPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="User">
        <Tab Title="User">
            <ShellContent ContentTemplate="{DataTemplate pages:UserPage}" Route="UserPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Dashboard">
        <Tab Title="Dasboard">
            <ShellContent ContentTemplate="{DataTemplate pages:Dashboard}" Route="Dashboard" />
        </Tab>
    </FlyoutItem>
</Shell>
